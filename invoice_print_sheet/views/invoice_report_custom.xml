<?xml version="1.0" encoding="utf-8"?>
<odoo>
       
<template id="report_invoice_document_dot_matrix" inherit_id="account.report_invoice_document">

    <!-- <t t-call="invoice_print_sheet.invoice_custom_layout"> -->
   
  <xpath expr="//table" position="before">
    <t t-set="pos_orders" t-value="o.sudo().pos_order_ids"/>
    <t t-if="pos_orders">
      <t t-if="pos_orders[0].payment_ids">
        <t t-foreach="pos_orders[0].payment_ids[0]" t-as="pay">
          <t t-if="pay">
            <div class="row">
              <div class="col-3">
                <span>
                  <strong>Payment Method: </strong>
                  <t t-esc="pay.payment_method_id.name"/>
                </span>
              </div>
              <div class="col-3">
                <span>
                  <strong>Cashier: </strong>
                  <span t-field="pay.pos_order_id.cashier"/>
                </span>
              </div>
            </div>
            <br/>
          </t>
        </t>
      </t>
    </t>
  </xpath>
  <xpath expr="//div[@name='comment']" position="after">
    <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
    <t t-foreach="lines" t-as="line">
      <t t-set="sale_ids" t-value="line.sale_line_ids"/>
    </t>
    <div class="row col-12">
      <t t-if="sale_ids">
        <span>Signature: </span>
        <img t-if="sale_ids[0].order_id.signature" t-att-src="image_data_uri(sale_ids[0].order_id.signature)" style="width: 40%"/>
      </t>
      <t t-else="">
        <br/>
        <div class="col-4">
          <br/>
          <br/>
          <br/>
          <span>Approved By:__________________ </span>
        </div>
        <div class="col-4">
          <br/>
          <br/>
          <br/>
          <span>Received By:____________________</span>
        </div>
        <div class="col-4">
          <br/>
          <br/>
          <br/>
          <span>Security Check:____________________</span>
        </div>
      </t>
    </div>
    <br/>
  </xpath>
  <xpath expr="/t[1]/t[1]/div[2]/div[1]/table[1]/thead[1]/tr[1]/th[5]" position="replace"/>
  <xpath expr="/t[1]/t[1]/div[2]/div[1]/table[1]/tbody[1]/t[3]/tr[1]/t[1]/td[5]" position="replace"/>
  <xpath expr="/t/t/div[2]/div[1]/table/thead/tr/th[5]/span[1]" position="replace">
    <span groups="account.group_show_line_subtotals_tax_excluded" studio_groups="[{&quot;id&quot;: 25, &quot;name&quot;: &quot;Tax display B2B&quot;, &quot;display_name&quot;: &quot;Technical / Tax display B2B&quot;}]">
      <p style="margin-bottom: 0px;">Ext. Price</p>
    </span>
  </xpath>
  <xpath expr="/t/t/div[2]/div[1]/div[1]/div[1]" position="attributes">
    <attribute name="class" separator=" " add="col-3" remove="col-auto"/>
  </xpath>
  <xpath expr="/t/t/div[2]/div[1]/div[1]/div[2]" position="attributes">
    <attribute name="class" separator=" " add="col-3" remove="col-auto"/>
  </xpath>
  <xpath expr="/t/t/div[2]/div[1]/div[1]/div[3]" position="attributes">
    <attribute name="class" separator=" " add="col-3" remove="col-auto"/>
  </xpath>
  <xpath expr="/t/t/div[2]/div[1]/div[1]/div[5]" position="attributes">
    <attribute name="class" separator=" " add="col-3" remove="col-auto"/>
  </xpath>
  <xpath expr="/t/t/div[2]/div[1]/t[3]/t/t/t/div/div[2]" position="attributes">
    <attribute name="class" separator=" " add="col-4" remove="col-3"/>
  </xpath>
  <xpath expr="/t/t/div[2]/div[1]/t[3]/t/t/t/div/div[1]" position="attributes">
    <attribute name="class" separator=" " add="col-4" remove="col-3"/>
  </xpath>
  <xpath expr="/t/t/div[2]/div[1]/t[3]/t/t/t/div/div[1]" position="attributes">
    <attribute name="class" separator=" " add="col-6" remove="col-3"/>
  </xpath>
  <xpath expr="/t/t/div[2]/div[1]/t[3]/t/t/t/div/div[2]" position="attributes">
    <attribute name="class" separator=" " add="col-6" remove="col-4"/>
  </xpath>
    
    <xpath expr="//table" position="replace">
         <t t-set="o" t-value="o.with_context(lang=lang)"/>
    <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>
    <t t-set="product_count" t-value="12"/>
    <t t-set="len_lines" t-value="int(len(o.invoice_line_ids)/product_count)"/>
    <t t-set="len_lines_remainder" t-value="len(o.invoice_line_ids)/product_count"/>
    <t t-set="len_lines_split" t-value="str(len_lines_remainder).split('.')"/>
    <t t-if="len_lines_split[1] != 0">
      <t t-set="len_lines" t-value="len_lines + 1"/>
    </t>
    <t t-set="line_val_count" t-value="0"/>
    <t t-set="page_count" t-value="1"/>
    <t t-foreach="len_lines" t-as="l">
       
         <table style="border: none;top:180px;height:200px;font-size:10pt;position:relative;">
            <tbody>
                <t t-set="current_subtotal" t-value="0"/>
                <t t-set="counter" t-value="1"/>
                    <t t-foreach="o.invoice_line_ids" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                        <t t-if="((counter &gt; line_val_count) and (counter &lt;= (product_count*page_count)))">
                          <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''" width="1200px">
                              <t t-if="not line.display_type">
                                  <td name="td_name" width="200px" style="vertical-align:top;"><span t-field="line.product_id.default_code"/></td>
                                  <td name="td_quantity" width="135px" style="vertical-align:top;text-align: center;">
                                      <span t-esc="int(line['quantity'])"/>
                                  </td>
                                  <td name="td_name" width="555px" style="vertical-align:top;"><span t-field="line.product_id.name"/></td>
                                  <td name="td_priceunit" width="110px" style="text-align: right;vertical-align:top;">
                                      <span t-field="line.price_unit"/>
                                  </td>
                                  <td name="td_subtotal" class="o_price_total" width="185px" style="text-align:right;vertical-align:top;">
                                      <span t-esc="'{0:,.2f}'.format(line.price_subtotal)" widget="monetary" groups="account.group_show_line_subtotals_tax_excluded"/>
                                      <span t-esc="'{0:,.2f}'.format(line.price_total)" widget="monetary" groups="account.group_show_line_subtotals_tax_included"/>
                                  </td>
                                  <td width="15px"> </td>
                              </t>
                          </tr>
                        </t>
                         <t t-set="counter" t-value="counter + 1"/>
                    </t>
                    <t t-if="page_count == int(len_lines_split[0])+1">
                          <t t-set="lines_td" t-value="product_count - (len(o.invoice_line_ids) - line_val_count)"/>
                          <t t-foreach="lines_td" t-as="td">
                            <tr width="1200px">
                              <td width="200px"><p> </p></td>
                              <td width="135px"><p> </p></td>
                              <td width="555px"><p> </p></td>
                              <td width="110px"><p> </p></td>
                              <td width="185px"><p> </p></td>
                              <td width="15px"> </td>
                            </tr>
                          </t>
                        </t>
            </tbody>
        </table> 
        <table style="border-style:none;top:130px;font-size:10pt;height:35px;position:relative;">
            <tbody>
            <t t-if="o.partner_id.name">
              <t t-set="customer" t-value="o.partner_id.name.split('-')"/>
              <t t-set="customer_len" t-value="len(customer)"/>
            </t>
            <t t-elif="o.partner_id.parent_id">
              <t t-set="customer" t-value="o.partner_id.parent_id.name.split('-')"/>
              <t t-set="customer_len" t-value="len(customer)"/>
            </t>
                <tr width="1200px">
                    <td width="255px">
                        <span t-field="o.ref"/>
                    </td>
                    <td width="122px">
                        <span t-if="o.invoice_payment_term_id" t-field="o.invoice_payment_term_id.name"/>
                    </td>
                    <td width="164px">
                        <p class="m-0" t-field="o.invoice_date_due" t-options="{&quot;format&quot;: &quot;dd/MM/yyyy&quot;}"/>
                    </td>
                    <td width="60px">
                      <t t-if="o.invoice_user_id">
                        <t t-set="sp_split" t-value="o.invoice_user_id.name.split(' ')"/>
                        <t t-set="sp_len" t-value="len(sp_split)"/>
                        <span t-esc="sp_split[0][0]"/>
                        <t t-if="sp_len &gt; 1">
                          <span t-esc="sp_split[1][0]"/>
                        </t>
                      </t>
                    </td>
                    <td width="340px">
                        <t t-if="customer_len &gt; 1">
                            <span t-esc="customer[1]"/>
                        </t>
                        <t t-else="">
                            <t t-if="o.partner_id.name">
                                <span t-field="o.partner_id.name"/>
                            </t>
                            <t t-elif="o.partner_id.parent_id.name">
                                <span t-field="o.partner_id.parent_id.name"/>
                            </t>
                        </t>
                    </td>
                    <td width="259px">
                        <span t-field="o.partner_id.phone"/>
                    </td>
                </tr>
            </tbody>
        </table>
        <table style="border: none;top:180px;height:465px;font-size:10pt;position:relative;">
            <tbody>
                <t t-set="current_subtotal" t-value="0"/>
                <t t-set="counter" t-value="1"/>
                    <t t-foreach="o.invoice_line_ids" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                        <t t-if="((counter &gt; line_val_count) and (counter &lt;= (product_count*page_count)))">
                          <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''" width="1200px">
                              <t t-if="not line.display_type">
                                  <td name="td_name" width="200px" style="vertical-align:top;"><span t-field="line.product_id.default_code"/></td>
                                  <td name="td_quantity" width="135px" style="vertical-align:top;text-align: center;">
                                      <span t-esc="int(line['quantity'])"/>
                                  </td>
                                  <td name="td_name" width="555px" style="vertical-align:top;"><span t-field="line.product_id.name"/></td>
                                  <td name="td_priceunit" width="110px" style="text-align: right;vertical-align:top;">
                                      <span t-field="line.price_unit"/>
                                  </td>
                                  <td name="td_subtotal" class="o_price_total" width="185px" style="text-align:right;vertical-align:top;">
                                      <span t-esc="'{0:,.2f}'.format(line.price_subtotal)" widget="monetary" groups="account.group_show_line_subtotals_tax_excluded"/>
                                      <span t-esc="'{0:,.2f}'.format(line.price_total)" widget="monetary" groups="account.group_show_line_subtotals_tax_included"/>
                                  </td>
                                  <td width="15px"> </td>
                              </t>
                          </tr>
                        </t>
                         <t t-set="counter" t-value="counter + 1"/>
                    </t>
                    <t t-if="page_count == int(len_lines_split[0])+1">
                          <t t-set="lines_td" t-value="product_count - (len(o.invoice_line_ids) - line_val_count)"/>
                          <t t-foreach="lines_td" t-as="td">
                            <tr width="1200px">
                              <td width="200px"><p> </p></td>
                              <td width="135px"><p> </p></td>
                              <td width="555px"><p> </p></td>
                              <td width="110px"><p> </p></td>
                              <td width="185px"><p> </p></td>
                              <td width="15px"> </td>
                            </tr>
                          </t>
                        </t>
            </tbody>
        </table> 
    </t>
</xpath>

</template>


</odoo>
