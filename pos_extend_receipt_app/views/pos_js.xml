<?xml version="1.0"?>
<odoo>
	<record id="pos_config_view_inherit_form" model="ir.ui.view">
		<field name="name">res.config.setting.form.extended.view</field>
        <field name="model">res.config.settings</field>
		<field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//h2[@name='pos_interface']" position="before">
				<h2 name="order">POS Receipt Extended</h2>
				<div class="row mt16 o_settings_container">
					<div class="col-xs-12 col-md-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="order_barcode"/>
						</div>
						<div class="o_setting_right_pane">
							<label for="order_barcode"/>
							<div class="text-muted">
								Enable to show Barcode in Receipt
							</div>
							<div class="mt8">
								<field name="barcode_selection" widget="radio" attrs="{'invisible': [('order_barcode','=', False)]}"/>
							</div>
						</div>
					</div>
					<div class="col-xs-12 col-md-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="invoice_number"/>
						</div>
						<div class="o_setting_right_pane">
							<label for="invoice_number"/>
							<div class="text-muted">
								Enable View Invoice Number in Receipt
							</div>
						</div>
					</div>
					<div class="col-xs-12 col-md-6 o_setting_box">
						<div class="o_setting_left_pane">
							<field name="customer_details"/>
						</div>
						<div class="o_setting_right_pane">
							<label for="customer_details"/>
							<div class="text-muted">
								Enable to view Customer details in Receipt
							</div>
							<br/>
							<div class="content-group mt16" style="display: flex;">
								<div style="display: grid;min-width: 300px;"  attrs="{'invisible': [('customer_details' ,'=', False)]}">
									<label for="customer_name"/>
									<label for="customer_address"/>
									<label for="customer_mobile"/>
									<label for="customer_phone"/>
									<label for="customer_email"/>
									<label for="order_number"/>
									<label for="customer_vat"/>
								</div>
								<div style="display: grid;min-width: 125px;" attrs="{'invisible': [('customer_details' ,'=', False)]}">
									<field name="customer_name" attrs="{'required': [('customer_details', '!=', False)]}" />
									<field name="customer_address" attrs="{'required': [('customer_details', '!=', False)]}" />
									<field name="customer_mobile" attrs="{'required': [('customer_details', '!=', False)]}" />
									<field name="customer_phone" attrs="{'required': [('customer_details', '!=', False)]}" />
									<field name="customer_email" attrs="{'required': [('customer_details', '!=', False)]}" />
									<field name="order_number" attrs="{'required': [('customer_details', '!=', False)]}" />
									<field name="customer_vat" attrs="{'required': [('customer_details', '!=', False)]}" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>

</odoo>
